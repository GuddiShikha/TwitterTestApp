<div class="container mt-5">
  <h1 class="mb-4">Edit Tweet</h1>
  <%= form_for @tweet, url: tweet_path(@tweet), data: { tweet_id: @tweet.id }, html: { class: 'needs-validation tweet-form', id: 'edit_tweet_form', novalidate: true } do |f| %>
    <div class="mb-3">
      <%= f.label :content, class: "form-label" %>
      <%= f.text_area :content, class: "form-control tweet-content", required: true, rows: 3 %>
      <div class="invalid-feedback">
        Please enter your tweet content.
      </div>
    </div>
    <%= f.submit "Update Tweet", class: "btn btn-primary", id: 'update_tweet_btn' %>
  <% end %>

  <div id="error_messages" class="mt-3"></div>
</div>
<script src="common.js"></script>
