<div class="container mt-4">
  <div class="text-right mb-3">
    <% if user_signed_in? %>
      Logged in as: <%= current_user.email %>
    <% else %>
      <%= link_to 'Sign in', new_user_session_path, class: 'btn btn-primary mr-2' %>
      <%= link_to 'Sign up', new_user_registration_path, class: 'btn btn-secondary' %>
    <% end %>
  </div>

  <%= form_with(model: @tweet) do |form| %>
    <div class="form-group">
      <%= form.label :content, class: 'sr-only' %>
      <%= form.text_area :content, class: 'form-control', rows: 3, placeholder: 'What\'s happening?' %>
    </div>

    <div class="d-flex justify-content-end mt-3">
      <%= form.submit 'Tweet', class: 'btn btn-primary mr-2' %>
      <%= link_to 'Cancel', tweets_path, class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>
